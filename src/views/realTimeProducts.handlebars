<h1>Lista de productos en tiempo real</h1>

<!-- Agregar un nuevo producto con WebSockets -->
<h2>Agregar Nuevo Producto</h2>
<form id="productForm">
    <p>Titulo: </p>
    <input
        type="text"
        id="titleAdd"
        placeholder="Título del producto"
        required
    />
    <p>Precio: </p>
    <input
        type="number"
        id="priceAdd"
        placeholder="Precio del producto"
        required
    />
    <p>Descripción: </p>
    <input
        type="text"
        id="descriptionAdd"
        placeholder="Descripción del producto"
        required
    />
    <p>Código: </p>
    <input type="text" id="codeAdd" placeholder="Código de producto" required />
    <p>Stocks: </p>
    <input
        type="number"
        id="stockAdd"
        placeholder="Cantidad en stock"
        required
    />
    <p>Categoría: </p>
    <input
        type="text"
        id="categoryAdd"
        placeholder="Categoría del producto"
        required
    />
    <p>Miniatura:</p>
    <input type="text" id="thumbnailAdd" placeholder="URL de imagén" required />
    <button type="submit" id="btnAdd">Agregar Producto</button>
</form>
<hr />
<!-- Eliminar un producto usando WebSockets -->
<h2>Eliminar Producto por ID</h2>
<form id="deleteProductForm">
    <input
        type="text"
        id="titleDelete"
        placeholder="Id de producto a Eliminar"
    />
    <button type="submit" id="btnDelete">Eliminar Producto</button>
</form>
<hr />
<h2>Nuevo Producto</h2>
<div id="newProductBox"></div>
<h2>Productos</h2>
<div id="nuevoProductoAgregado"></div>

{{#each reversedproducts}}
    <div id={{this.id}}>
        <h3>{{this.title}}</h3>
        <ul>
            <li>$ {{this.price}}</li>
            <li>N° Id: {{this.id}}</li>
            <li>{{this.description}}</li>
            <li>Código de producto: {{this.code}}</li>
            <li>Stock:{{this.stock}}</li>
            <li>Categoría: {{this.category}}</li>
            <li>{{this.thumbnail}}</li>
        </ul>
        <hr />
    </div>
{{/each}}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>